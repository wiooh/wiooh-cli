{
  "compilerOptions": {
    "outDir": "dist/",
    "declaration": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": ["actions", "bin", "commands", "lib", "src"],
  "exclude": ["node_modules", "__tests__"]
}
